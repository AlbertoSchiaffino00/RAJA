//
// Data types for reduction sanity tests
//
using ReductionDataTypeList = camp::list< int,
                                          float,
                                          double >;


//
// Cartesian product of types used in parammeterized tests
//
using @BACKEND@ForallReduceSanityTypes =
  Test< camp::cartesian_product<ReductionDataTypeList,
                                @RESOURCE@ResourceList,
                                @BACKEND@ForallReduceExecPols,
                                @BACKEND@ReducePols>>::Types;

//
// Instantiate parameterized test
//
INSTANTIATE_TYPED_TEST_SUITE_P(@BACKEND@,
                               Forall@REDUCETYPE@SanityTest,
                               @BACKEND@ForallReduceSanityTypes);
